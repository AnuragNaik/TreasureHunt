<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingTop="70dp">

    <ImageView
        android:id="@+id/treasure_image"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/treasure_image" />

    <ImageView
        android:id="@+id/hunt_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hunt_image"
        android:paddingTop="90dp"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:src="@drawable/club"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/hunt_image"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="\u00a9 2017 Anurag Naik &amp; Aswin Jacob" />

</RelativeLayout>